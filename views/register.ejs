<div class="row my-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <form action="/register" method="POST" enctype="multipart/form-data">
                <%- include('./partials/errors.ejs') %> 
                <% errors.map(error => { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error.message %> 
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% }); %> 
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-4">
                        <small>upload image*</small>
                        <input type="file" name="myFile" id="myFile" class="form-control">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-2">
                        <input type="text" name="name" id="name" class="form-control" placeholder="Name">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-2">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-2">
                        <input type="number" name="phone" id="phone" class="form-control" placeholder="Phone">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-2">
                        <input type="text" name="profession" id="profession" class="form-control" placeholder="Profession">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-2">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-2">
                        <input type="password" name="cpassword" id="cpassword" class="form-control" placeholder="Confirm Password">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 mt-3 mb-4">
                        <button type="submit" class="btn btn-primary form-control">Sign Up</button>
                        <p class="lead mt-2">Already created a datastore?<a href="/login">Login</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>